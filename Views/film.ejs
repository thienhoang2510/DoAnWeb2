            <div class="card ">
              <div class="card-header ">
                <h5 class="card-title">Danh sách rạp</h5>
              </div>
              <div class="card-body ">
                <table class="table table-hover table-info">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col"></th>
                      <th scope="col">STT</th>
                      <th scope="col">Tên phim</th>
                      <th scope="col">Thời gian</th>
                      <th scope="col">Thời lượng</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < film.length ; i++ ) { %>
                      <% let cn = film[i] %>
                    <tr>
                      <th><input type="checkbox" class="fill-control-input" id="a<%= cn.id%>" onclick="check(this.id)"></th>
                      <td>
                          <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="modal" data-placement="top" title="Edit" data-target="#exampleModal" data-whatever="Cập nhật" id="<%= cn.id%>" Onclick="Edit(this.id)"><i class="fa fa-edit"></i></button>
                      </td>
                      <th scope="row"><%= i+1%></th>
                      <td><%= cn.filmName%></td>
                      <td><%= cn.DateShow%></td>
                      <td><%= cn.time%></td>
                    </tr>
                    <% } %>
                  </tbody>
