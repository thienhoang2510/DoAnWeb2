  <script>
    var lstdelete="";
    $(document).ready(function() {
      var film = $.parseJSON('<%-JSON.stringify(film)%>');
      // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
      demo.initChartsPages();
    });
    $('#exampleModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget)
      var recipient = button.data('whatever')
      var modal = $(this)
      modal.find('.modal-title').text(recipient+' phim');
    })
    function reload()
    {
      $("#filmName").val("");
      $("#DateShow").val("");
      $("#poster").val("");
      $("#time").val("");
      $("#Description").val("");
      $("#Trailer").val("");
      $("#ID").val("");
    }
    function Edit(id)
    {
      var button = $(event.relatedTarget)
      var recipient = button.data('whatever')
      var modal = $(this)
      modal.find('.modal-title').text(recipient+' phim');
      var film = $.parseJSON('<%-JSON.stringify(film)%>');
      for(let i = 0; i < film.length ; i++ ) 
      {
        let cn = film[i];
        if(cn.id==id)
        {
          console.log(cn.time)
          $("#filmName").val(cn.filmName);
          $("#DateShow").val(cn.DateShow);
          $("#time").val(cn.time);
          $("#Description").val(cn.Description);
          $("#Trailer").val(cn.Trailer);
          $("#ID").val(cn.id);
          document.getElementById("imgposter").src= '../img/covers/'+cn.poster;
        }
      }
    }
    function check(id) 
    {
      var checkBox = document.getElementById(id);
      if (checkBox.checked == true){
        lstdelete =lstdelete + id.substr(1, id.length-1)+",";
      } 
      document.getElementById("link").setAttribute("href","/admin/film/:"+lstdelete);
    }
    $('#poster').on('change',function ()
        {
            var filePath = Request.Form.Files["poster"].FileName;
            console.log(filePath);
            $('#files').val(filePath);
        });
  </script>
  
