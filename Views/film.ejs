                      </div>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Trailer:</label>
                        <input type="text" class="form-control" name="Trailer" id="Trailer">
                      </div>
                      <input type='text' name="files" id="files" placeholder="tải ảnh lên" hidden/>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thực hiện</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"  onclick="reload()">Đóng</button>
                      </div>
                    </div>
                    <div style="float: right;">
                        <div class="form-group" style="margin-top: 15px;">
                            <img src="../img/covers/cover2.jpg" alt="poster" width="200" height="350" id="imgposter">
                            <script>
                              function encodeImageFileAsURL() {

                                var filesSelected = document.getElementById("poster").files;
                                if (filesSelected.length > 0) {
                                  var fileToLoad = filesSelected[0];

                                  var fileReader = new FileReader();

                                  fileReader.onload = function(fileLoadedEvent) {
                                    var srcData = fileLoadedEvent.target.result; 
                                    $("#files").val(srcData);
                                  }
                                  fileReader.readAsDataURL(fileToLoad);
                                }
                              }
                                window.addEventListener('load', function() {
                                  debugger
                                    document.querySelector('input[type="file"]').addEventListener('change', function() {
                                      debugger
                                        if (this.files && this.files[0]) {
                                            //var img = document.querySelector('img');
                                            var img = document.getElementById('imgposter');
                                            img.onload = () => {
                                                URL.revokeObjectURL(img.src);  // no longer needed, free memory
                                            }
                                            
                                            img.src = URL.createObjectURL(this.files[0]); // set src to blob url
                                        }
                                    });
                                    
                                });
                            </script>
                            <input type='file' name="poster" id="poster" placeholder="tải ảnh lên" onchange="encodeImageFileAsURL()"/>
                        </div>
                    </div>
                    </form>
