  <script>
    var lstdelete="";
    $(document).ready(function() {
      var cinema = $.parseJSON('<%-JSON.stringify(cinema)%>');
      var cinema1 = $.parseJSON('<%-JSON.stringify(cinema1)%>');
      // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
      demo.initChartsPages();
    });
    $('#exampleModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget)
      var recipient = button.data('whatever')
      var modal = $(this)
      modal.find('.modal-title').text(recipient+' rạp');
      //modal.find('.modal-body input').val('');
    })
    function reload()
    {
      $("#cinemaName").val("");
          $("#cinemaGroup").val("");
          $("#cinemaType").val("");
          $("#cinemaN").val("");
          $("#cinemaD").val("");
          $("#ID").val("");
    }
    function Edit(id)
    {
      debugger
      var button = $(event.relatedTarget)
      var recipient = button.data('whatever')
      var modal = $(this)
      modal.find('.modal-title').text(recipient+' rạp');
      var cinema = $.parseJSON('<%-JSON.stringify(cinema)%>');
      var cinemaGroup = $.parseJSON('<%-JSON.stringify(cinemaGroup)%>');
      for(let i = 0; i < cinema.length ; i++ ) 
      {
        let cn = cinema[i];
        if(cn.id==id)
        {
          $("#cinemaName").val(cn.cinemaName);
          $("#cinemaGroup").val(cn.cinemagroupID);
          $("#cinemaType").val(cn.cinemaType);
          $("#cinemaN").val(cn.width);
          $("#cinemaD").val(cn.length);
          $("#ID").val(cn.id);
        }
      }
    }
    function check(id) 
    {
      var checkBox = document.getElementById(id);
      if (checkBox.checked == true){
        lstdelete =lstdelete + id.substr(1, id.length-1)+",";
      } 
      document.getElementById("link").setAttribute("href","/admin/cinema/:"+lstdelete);
    }
  </script>
  
