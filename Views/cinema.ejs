      <div class="content">
        <div class="row">
          <div class="col-lg-2 col-md-3 col-sm-2">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal"  data-whatever="Tạo Mới">Tạo Mới</button>
            <!--popup tạo mới/ cập nhật-->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"  onclick="reload()">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form action="" method="POST">
                      <input type="text" style="color: transparent;" id="ID" name="ID" hidden>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tên rạp:</label>
                        <input type="text" class="form-control" name="cinemaName" id="cinemaName" required>
                      </div>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Cụm rạp:</label>
                        <select class="form-control" aria-label="Default select example" aria-placeholder="Vui lòng chọn!" name="cinemaGroup" id="cinemaGroup">
                          <% for(let i = 0; i < cinemaGroup.length ; i++ ) { %>
                            <% let cn = cinemaGroup[i] %>
                          <option value="<%= cn.id%>"><%= cn.cinemagroupName%></option>
                          <% } %>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Loại rạp:</label>
                        <select class="form-control" aria-label="Default select example"  aria-placeholder="Vui lòng chọn!" name="cinemaType" id="cinemaType">
                          <option value="2D">2D</option>
                          <option value="3D">3D</option>
                          <option value="4D">4D</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Chiều ngang:</label>
                        <input type="text" class="form-control" name="cinemaN" id="cinemaN" required>
                      </div>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Chiều dọc:</label>
                        <input type="text" class="form-control" name="cinemaD" id="cinemaD" required>
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thực hiện</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="reload()">Đóng</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!--end-->
          </div>
          <div class="col-lg-2 col-md-3 col-sm-1">
            <a class="btn btn-secondary" id="link" href="" role="button">Xóa</a>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-header ">
                <h5 class="card-title">Danh sách rạp</h5>
              </div>
              <div class="card-body ">
                <table class="table table-hover table-info">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col"></th>
                      <th scope="col">STT</th>
                      <th scope="col">Tên rạp</th>
                      <th scope="col">Loại Rạp</th>
                      <th scope="col">Cụm rạp</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < cinema1.length ; i++ ) { %>
                      <% let cn = cinema1[i] %>
                    <tr>
                      <th><input type="checkbox" class="fill-control-input" id="a<%= cn.id%>" onclick="check(this.id)"></th>
                      <td>
                          <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="modal" data-placement="top" title="Edit" data-target="#exampleModal" data-whatever="Cập nhật" id="<%= cn.id%>" Onclick="Edit(this.id)"><i class="fa fa-edit"></i></button>
                      </td>
                      <th scope="row"><%= i+1%></th>
                      <td><%= cn.cinemaName%></td>
                      <td><%= cn.cinemaType%></td>
                      <td><%= cn.cinemagroupName%></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <div class="card-footer ">
                <hr>
                <div class="stats" style="float: right;">
                  <i class="fa fa-history"></i> Updated 3 minutes ago
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer footer-black  footer-white ">
        <div class="container-fluid">
          <div class="row">
            <nav class="footer-nav">
