<script>
    var lstdelete="";
    $(document).ready(function() {
      var movie = $.parseJSON('<%-JSON.stringify(movie)%>');
	  var film = $.parseJSON('<%-JSON.stringify(film)%>');
	  var cinema = $.parseJSON('<%-JSON.stringify(cinema)%>');
    });
	function load()
	{   
		debugger
		$.ajax({  
           url:'/auth/booking/load',  
           method:'POST',  
           dataType:'json', 
		   data:{'filmID':$('#film').val(), 'cinemaID': $('#cinema').val()},  
           success:function(data){ 
               if(data.length > 0){  
					$("#timeStart").empty();
					var a = new Date();
					for(var i=0; i< data.length;i++)
					{
						var a = new Date(data[i].DateStart);
						var x = document.getElementById("timeStart");
			   			var option = document.createElement("option");
						option.text = a.getDate()+"-"+a.getMonth()+"-"+a.getFullYear()+"  "+ a.getHours()+":"+a.getMinutes()
						option.value = data[i].id;
						x.add(option,x[i]);
					}
               } 
			   else
			   {
				   $("#timeStart").empty();
			   }
           },  
           error:function(data){  
               alert('server error occured')  
           }  
       });    
    }
</script>