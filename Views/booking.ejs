<body class="body">

	<div class="sign section--bg" data-bg="../img/home/home__bg.jpg">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="sign__content">
						<!-- registration form -->
						<form action="" class="Order__form" method="POST">
							<a href="/" class="sign__logo">
								<img src="../img/logo.svg" alt="">
							</a>

							<div class="sign__group">
								<select class="selectpicker sign__input" mbsc-dropdown name="film" id="film" onchange="load()">
									<% for(let i = 0; i < film.length ; i++ ) { %>
										<% let cn = film[i] %>
									<option value="<%= cn.id%>"><%= cn.filmName%></option>
									<% } %>
								</select>
							</div>

							<div class="sign__group">
								<select class="selectpicker sign__input" mbsc-dropdown name="cinema" id="cinema" onchange="load()">
									<% for(let i = 0; i < cinema.length ; i++ ) { %>
										<% let cn = cinema[i] %>
									<option value="<%= cn.id%>"><%= cn.cinemaName%></option>
									<% } %>
								</select>
							</div>

							<div class="sign__group">
								<select class="selectpicker sign__input" mbsc-dropdown name="timeStart" id="timeStart">
									<% for(let i = 0; i < movie.length ; i++ ) { %>
										<% let cn = movie[i] %>
									<option value="<%= cn.id%>"><%= cn.DateStart.getDate()%>-<%=cn.DateStart.getMonth()%>-<%=cn.DateStart.getFullYear()%> <%=cn.DateStart.getHours()%>:<%=cn.DateStart.getMinutes()%></option>
									<% } %>
								</select>
							</div>
							<button class="sign__btn" type="submit">Mua vé</button>
						</form>
						<!-- registration form -->
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- JS -->
	<script src="../js/jquery-3.3.1.min.js"></script>
	<script src="../js/bootstrap.bundle.min.js"></script>
	<script src="../js/owl.carousel.min.js"></script>
	<script src="../js/jquery.mousewheel.min.js"></script>
	<script src="../js/jquery.mCustomScrollbar.min.js"></script>
	<script src="../js/wNumb.js"></script>
	<script src="../js/nouislider.min.js"></script>
	<script src="../js/plyr.min.js"></script>
	<script src="../js/jquery.morelines.min.js"></script>
	<script src="../js/photoswipe.min.js"></script>
	<script src="../js/photoswipe-ui-default.min.js"></script>
	<script src="../js/main.js"></script>
</body>

</html>
