  <script>
    $(document).ready(function() {
      var cinemaGroup = $.parseJSON('<%-JSON.stringify(cinemaGroup)%>');
      var film = $.parseJSON('<%-JSON.stringify(film)%>');
      var profile = $.parseJSON('<%-JSON.stringify(profile)%>');
      var cinemaGroup2 = $.parseJSON('<%-JSON.stringify(cinemaGroup2)%>');
      var film2 = $.parseJSON('<%-JSON.stringify(film2)%>');
    
    var canvas1 = document.getElementById("myCanvas1");
    var canvas2 = document.getElementById("myCanvas2");
    var ctx1 = canvas1.getContext("2d");
    var ctx2 = canvas2.getContext("2d");
    var lstcinemaGroup = [];
    var lstcinemaGroupValue = [];
    for(var i=0;i<cinemaGroup2.length;i++)
    {
      lstcinemaGroup.push(cinemaGroup2[i].cinemagroupName);
      lstcinemaGroupValue.push(cinemaGroup2[i].sumamount);
    }
    var lstfilm = [];
    var lstfilmValue = [];
    for(var i=0;i<film2.length;i++)
    {
      lstfilm.push(film2[i].filmName);
      lstfilmValue.push(film2[i].sumamount);
    }

    var myChart1 = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: lstcinemaGroup,
            datasets: [{
                label: 'Cột giá trị',
                data: lstcinemaGroupValue,
                backgroundColor: "rgb(100, 100, 100)"
            }]
        },
        options: {
            responsive: false,
            scales: {
                yAxes: [{
                    ticks: {
                        min: 0,
                        max: 5000000,
                        stepSize: 500000,
                    }
                }]
            }
        }
    });
    var myChart2 = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: lstfilm,
            datasets: [{
                label: 'Cột giá trị',
                data: lstfilmValue,
                backgroundColor: "rgb(100, 100, 100)"
            }]
        },
        options: {
            responsive: false,
            scales: {
                yAxes: [{
                    ticks: {
                      min: 0,
                        max: 5000000,
                        stepSize: 500000,
                    }
                }]
            }
        }
    });
  });
</script>
